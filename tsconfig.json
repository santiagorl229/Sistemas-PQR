{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@domain/*": ["src/domain/*"],
      "@constants": ["src/constants"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@application/*": ["src/application/*"]
    },
  }
}
